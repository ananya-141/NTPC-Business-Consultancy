<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">


               <marquee direction="left" onmouseover="this.stop();" onmouseout="this.start();">IMPORTANT NOTICE</marquee>



                <div class="justify-between hello">
                    <div class="hello2">
                        <a href="/Home/Index">
                            <img class="navbarntpc" src="~/Content/Images/ntpc.png"
                                 height="35" />
                        </a>

                        <a class="navbarntpc" style="color:#9BABB8;" href="mailto:ntpccc@ntpc.co.in">ntpccc@ntpc.co.in</a>
                        <img src="~/Content/Images/mail.png" class="navbarntpc"
                             height="20" />
                    </div>
                </div>


            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - NTPC LIMITED</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
