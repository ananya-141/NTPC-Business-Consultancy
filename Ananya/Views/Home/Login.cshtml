@model Ananya.Models.Tbl_user

@{
    ViewBag.Title = "Login";
}









<html>
<head>
    <link rel="stylesheet" href="~/Content/login.css" />
</head>
<body>
    <h2>Login</h2>


    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Please use your AD credentials for login</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })





    <div class="form-group">
        <label class="empno">Employee Number</label>

        <div class="col-md-10 in">
            @Html.EditorFor(model => model.Empno, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Empno, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />

    <div class="form-group">
        <label class="pass">Password</label>

        <div class="col-md-10 in">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

   
    



    <br />
    <br />
    <br />
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Sign In" class="btn loginbutton btn-default" />
        </div>
    </div>


    <br />
    <br />
    

</div>
    }

    <div class="home">
        @Html.ActionLink("Home", "Index")
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
